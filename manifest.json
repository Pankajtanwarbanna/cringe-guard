{
    "manifest_version": 3,
    "name": "Cringe Guard: filter out cringe content on your LinkedIn feed using AI",
    "author": "Pankaj Tanwar",
    "version": "0.0.4",
    "description": "AI-powered Chrome extension that filters cringe, clickbait & low-value posts from your LinkedIn feed in real-time.",
    "content_scripts": [
        {
            "js": [
                "scripts/config.js",
                "scripts/utils.js",
                "scripts/api.js",
                "scripts/ui.js",
                "scripts/content.js"
            ],
            "matches": [
                "https://www.linkedin.com/feed/*"
            ],
            "type": "module"
        }
    ],
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "./pages/popup.html",
        "default_title": "Cringe Guard"
    },
    "options_page": "./pages/settings.html",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": ["scripts/*.js"],
            "matches": ["https://www.linkedin.com/*"]
        }
    ]
}